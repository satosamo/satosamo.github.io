<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matej Lorinc</title>
    <link rel="stylesheet" href="/css/homepage.css">
</head>
<body>

<div class="sidebar">
    <div class="sidebar-label">MENU</div>

    <div class="sidebar-scroll-area">
        <ul>
        {% for item in navigation %}
            {% set isActive = (item.url == page.url) %}
            
            <li>
                <a class="sidebar-box {% if isActive %}active{% endif %}" href="{{ item.url }}">
                    {{ item.label }}
                </a>
            </li>

            {% if item.url in page.url or page.url in item.url %}
                {% set currentChatUrl = item.chatUrl %}
            {% endif %}
        {% endfor %}
        </ul>
    </div>

    <div class="sidebar-bottom-action">
        <a class="sidebar-box special-action" href="{{ currentChatUrl | default('/chats/') }}">
            LLM Chats
        </a>
    </div>
</div>

    <br/><br/><br/>
    {{ content | safe }}
    <br/><br/><br/>

{% if showScrollArrow %}
    <div id="scroll-arrow" class="scroll-arrow"></div>
    <script src="/scripts/scrollarrow.js"></script>
{% endif %}

</body>
</html>